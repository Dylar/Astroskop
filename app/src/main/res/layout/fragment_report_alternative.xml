<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/two_grid_unit">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/fragment_report_alternative_header"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_grid_unit"
            android:gravity="center_vertical"
            android:text="@string/fragment_report_alternative_text"
            android:textSize="@dimen/text_size_small" />

        <RelativeLayout
            android:id="@+id/fragment_report_alternative_hotline_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three_grid_unit"
            android:background="@drawable/rounded_corner_blue"
            android:padding="@dimen/two_grid_unit">

            <TextView
                android:id="@+id/fragment_report_alternative_hotline"
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Stromnetz GmbH – Störungsannahme"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_small" />

            <TextView
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_report_alternative_hotline"
                android:gravity="center"
                android:text="0800 - 1439439"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_report_alternative_police_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_grid_unit"
            android:background="@drawable/rounded_corner_blue"
            android:padding="@dimen/two_grid_unit">

            <TextView
                android:id="@+id/fragment_report_alternative_police"
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Polizei Notruf"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_small" />

            <TextView
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_report_alternative_police"
                android:gravity="center"
                android:text="110"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fragment_report_alternative_firefighter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_grid_unit"
            android:background="@drawable/rounded_corner_blue"
            android:padding="@dimen/two_grid_unit">

            <TextView
                android:id="@+id/fragment_report_alternative_firefighter"
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Feuerwehr Notruf"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_small" />

            <TextView
                style="@style/AppTheme.MediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_report_alternative_firefighter"
                android:gravity="center"
                android:text="112"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>