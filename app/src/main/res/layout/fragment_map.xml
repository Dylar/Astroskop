<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_map_scala"
        android:layout_margin="@dimen/two_grid_unit">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_altona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_altona" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_eimsbuettel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_eimsbuettel" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_nord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_nord" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_wandsbek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_wandsbek" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_bergedorf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_bergedorf" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_harburg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_harburg" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_map_mitte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_mitte" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/twentyfour_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Altona"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/eleven_grid_unit"
            android:layout_marginEnd="@dimen/fifteen_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Eims-\nbÃ¼ttel"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/eleven_grid_unit"
            android:layout_marginEnd="@dimen/three_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="HH-\nNord"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/twenty_grid_unit"
            android:layout_marginStart="@dimen/twelve_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Wandsbek"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/eighteen_grid_unit"
            android:layout_marginTop="@dimen/twentytwo_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Bergedorf"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/twentytwo_grid_unit"
            android:layout_marginTop="@dimen/twenty_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Harburg"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/four_grid_unit"
            android:layout_marginTop="@dimen/twelve_grid_unit"
            android:gravity="center"
            android:src="@drawable/map_mitte"
            android:text="Hamburg\nMitte"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/fragment_map_scala"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_grid_unit"
        android:layout_above="@+id/fragment_map_scala_low"
        android:layout_marginBottom="@dimen/half_grid_unit"
        android:layout_marginEnd="@dimen/two_grid_unit"
        android:layout_marginStart="@dimen/two_grid_unit"
        android:background="@drawable/consumption_scala" />

    <TextView
        android:id="@+id/fragment_map_scala_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/two_grid_unit"
        android:layout_marginStart="@dimen/two_grid_unit"
        android:text="0 MW" />

    <TextView
        android:id="@+id/fragment_map_scala_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/two_grid_unit"
        android:layout_marginEnd="@dimen/two_grid_unit"
        android:text="500 MW" />

</RelativeLayout>