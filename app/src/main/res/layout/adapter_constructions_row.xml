<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_constructions_row_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/four_grid_unit"
        android:layout_marginTop="@dimen/one_grid_unit"
        android:layout_marginBottom="@dimen/one_grid_unit"
        android:layout_marginStart="@dimen/two_grid_unit"
        android:gravity="center"
        android:text="@string/fragment_menu_button_job_offer_text"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:layout_width="@dimen/two_grid_unit"
        android:layout_height="@dimen/two_grid_unit"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/two_grid_unit"
        android:background="@drawable/ic_arrow_right_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/adapter_constructions_row_text"
        android:background="@color/underline" />

</RelativeLayout>